---
import Layout from '../layouts/Layout.astro';

const title = 'Internal Server Error';
const message = 'Something went wrong on our end. Please try again later.';
---

<Layout title={title}>
  <main class="min-h-screen bg-gradient-to-br from-red-50 via-orange-50 to-yellow-50 flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10">
        <div class="mb-6">
          <svg
            class="w-20 h-20 mx-auto text-red-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            />
          </svg>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-900 mb-4">500</h1>
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">{title}</h2>
        
        <p class="text-gray-600 mb-8">
          {message}
        </p>
        
        <div class="space-y-3">
          <button
            onclick="window.location.reload()"
            class="w-full px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-all"
          >
            Try Again
          </button>
          
          <a
            href="/"
            class="block w-full px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-all"
          >
            Go to Home
          </a>
          
          <a
            href="/admin/login"
            class="block w-full px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-all"
          >
            Admin Dashboard
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
